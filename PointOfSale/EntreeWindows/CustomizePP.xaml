<UserControl x:Class="BleakwindBuffet.PointOfSale.EntreeWindows.CustomizePP"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BleakwindBuffet.PointOfSale.EntreeWindows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" FontSize="16" FontFamily="Ariel, Calibri">Toppings:</Label>
        
        <Button Name="cancelPPoacherButton" Click="CancelOrder" Grid.Row="2" Grid.Column="0"  FontSize="16" FontFamily="Ariel, Calibri">Cancel Philly Poacher Order</Button>
        <Button Name="confirmPPoacherButton" Click="FinishOrder" Grid.Row="2" Grid.Column="1"  FontSize="16" FontFamily="Ariel, Calibri">Finish Philly Poacher Order</Button>


        <StackPanel Grid.Row="1">
            <CheckBox IsChecked="true" Margin="10, 10, 10, 5" Content="Sirloin"/>
            <CheckBox IsChecked="true" Margin="10, 5" Content="Onion"/>
            <CheckBox IsChecked="true" Margin="10, 5, 10, 10" Content="Roll"/>
        </StackPanel>
    </Grid>
</UserControl>
