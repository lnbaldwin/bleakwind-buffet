<UserControl x:Class="BleakwindBuffet.PointOfSale.OrderDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BleakwindBuffet.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Label DockPanel.Dock="Top" FontSize="16" FontFamily="Ariel, Calibri">Current Order:</Label>
        <Button Name="submitOrderButton"  DockPanel.Dock="Bottom" FontSize="16" FontFamily="Ariel, Calibri">Finish Order</Button>
        <ListView Name="currentOrder"/>
    </DockPanel>
</UserControl>
